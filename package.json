{
  "name": "stellar-disbursement-platform-frontend",
  "version": "6.0.0",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=22.x"
  },
  "lint-staged": {
    "src/**/*.ts?(x)": [
      "npx eslint --fix --max-warnings 0"
    ]
  },
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^2.11.0",
    "@stellar/design-system": "^3.2.6",
    "@tanstack/react-query": "^5.90.11",
    "@tanstack/react-query-devtools": "^5.91.1",
    "assert": "^2.1.0",
    "bignumber.js": "^9.3.1",
    "brace-expansion": "4.0.1",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "date-fns": "^4.1.0",
    "https-browserify": "^1.0.0",
    "lodash": "^4.17.21",
    "oidc-client-ts": "^3.4.1",
    "os-browserify": "^0.3.0",
    "papaparse": "^5.5.3",
    "path-browserify": "^1.0.1",
    "pbkdf2": "3.1.5",
    "process": "^0.11.10",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-google-recaptcha": "^3.1.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.9.6",
    "redux": "^5.0.1",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "url": "^0.11.4",
    "uuid": "^13.0.0"
  },
  "scripts": {
    "start": "yarn git-info && vite",
    "build": "yarn git-info && vite build",
    "preview": "vite preview",
    "refresh-lock": "yarn-deduplicate yarn.lock && yarn install",
    "install-if-package-changed": "git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD | grep --quiet yarn.lock && yarn install || exit 0",
    "prod:build": "docker image build -t disbursement-platform-frontend:localbuild .",
    "prod:serve": "docker run -p 8000:80 disbursement-platform-frontend:localbuild",
    "production": "yarn prod:build && yarn prod:serve",
    "prepare": "husky",
    "pre-commit": "concurrently 'pretty-quick --staged --pattern \"**/*.{ts,tsx,js,jsx}\"' 'lint-staged' 'tsc --noEmit'",
    "git-info": "rm -rf src/generated/ && mkdir -p src/generated/ && echo \"export default { commitHash: '$(git rev-parse --short HEAD)', version: '$(git describe --tags --always)' };\" > src/generated/gitInfo.ts"
  },
  "browserslist": {
    "production": [
      "chrome >= 89",
      "firefox >= 89",
      "safari >= 15",
      "edge >= 89"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@stellar/tsconfig": "^1.0.2",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.21",
    "@types/node": "^24.10.1",
    "@types/papaparse": "^5.5.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-google-recaptcha": "^2.1.9",
    "@types/react-redux": "^7.1.34",
    "@types/react-router-dom": "^5.3.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.3",
    "pretty-quick": "^4.2.2",
    "sass": "^1.94.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.2.4",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vite-plugin-static-copy": "^3.1.4",
    "vite-plugin-svgr": "^4.5.0",
    "yarn-deduplicate": "^6.0.2"
  }
}
